<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40B4E7"
    android:orientation="horizontal"
    tools:context=".VerifyActivity"
    >

    <RelativeLayout
        android:id="@+id/relatif1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Verify your Acount"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/linear1"
            android:id="@+id/linear2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="270dp"
                android:layout_height="500dp"
                android:layout_marginTop="200dp"
                android:text="We have send verification code to your email"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <RelativeLayout

            <EditText
                android:id="@+id/verivication"
                style="@style/Edit"
                android:inputType="textCapWords"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="enter verification code here"
                android:paddingTop="15dp"
                android:paddingBottom="17dp"
                android:paddingRight="25dp"
                android:layout_marginTop="250dp"
                android:textColorHighlight="@color/background"
                android:layout_centerHorizontal="true"

                />

                >

            </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/relatif2"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnsend"
            android:style="@style/Btnstyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="SEND"

            />
    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>